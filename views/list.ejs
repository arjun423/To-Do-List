<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1> <%= listname %> List</h1>
  </div>
   
  <div class="box">
    
    <% newListItems.forEach(function(item){%>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" value="<%=item._id%>" name="checkbox" onChange="this.form.submit()">
        <p><%=item.name%></p>
      </div>
      <input type="hidden"  name="hidden" value="<%=listname%>"></input>
    </form>
   <% }) %>
     
      
    
      <form class="box" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add task" autocomplete="off" >
        <button type="submit" name="button" value="<%= listname%>" >+</button>
    </form>
       
         
    
 
 
    
  </div>
  
   


</body>
</html>